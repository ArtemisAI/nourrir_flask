# .env.example - example environment variables for NourrIR Flask
# Copy to `.env` and modify values accordingly.

# Primary LLM (Ollama)
OLLAMA_URL=http://your-ollama-host:11434/api/chat
OLLAMA_MODEL=gemma3:latest

# Fallback LLM (Gemini)
GEMINI_API_KEY=your_gemini_api_key_here

# Networking
REQUEST_TIMEOUT=8

# Logging
LOG_FILE=nurih_app.log

# Flask environment
FLASK_ENV=production